<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bottom_border">

    <TextView
        android:id="@+id/property_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h3"
        tools:text="Minnesota Avenue" />

    <TextView
        android:id="@+id/property_description_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h4" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            android:layout_gravity="right"
            android:id="@+id/sell_house_button"
            tools:text="SELL HOUSE FOR $555"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"/>

        <Button
            android:visibility="gone"

            android:layout_marginBottom="10dp"
            android:layout_gravity="right"
            android:id="@+id/sell_hotel_button"
            tools:text="SELL HOTEL FOR $555"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_gravity="right"
            tools:text="MORTGAGE FOR $999"
            android:id="@+id/mortgage_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
