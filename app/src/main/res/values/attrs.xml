<resources>




    <declare-styleable name="Field">
        <attr name="field_position" format="enum">
            <enum name="bottom" value="0"/>
            <enum name="left" value="90"/>
            <enum name="top" value="180"/>
            <enum name="right" value="270"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="PropertyField">
        <attr name="field_color" format="color"/>
        <attr name="field_text" format="string"/>
        <attr name="field_price" format="integer"/>
    </declare-styleable>


    <declare-styleable name="SpecialField">
        <attr name="special_label" format="string"/>
        <attr name="special_price" format="integer"/>
        <attr name="special_logo" format="integer"/>
        <attr name="special_is_tax" format="boolean"></attr>
    </declare-styleable>


    <declare-styleable name="ChanceField">
        <attr name="chance_type" format="string"/>
    </declare-styleable>
    <declare-styleable name="SquareField">
        <attr name="square_logo" format="integer"/>
    </declare-styleable>
    <declare-styleable name="FullscreenAttrs">
        <attr name="fullscreenBackgroundColor" format="color" />
        <attr name="fullscreenTextColor" format="color" />
    </declare-styleable>
</resources>



